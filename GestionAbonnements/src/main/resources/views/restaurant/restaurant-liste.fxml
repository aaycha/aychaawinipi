                        </VBox>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="60" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colNom" text="Nom" prefWidth="180" style="-fx-font-weight: bold;"/>
                        <TableColumn fx:id="colAdresse" text="Adresse" prefWidth="200"/>
                        <TableColumn fx:id="colTelephone" text="TÃ©lÃ©phone" prefWidth="120"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
